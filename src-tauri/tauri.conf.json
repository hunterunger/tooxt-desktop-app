{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "turbo build",
        "beforeDevCommand": "turbo dev",
        "devPath": "http://localhost:3001",
        "distDir": "../out"
    },
    "package": {
        "productName": "Tooxt Uploader",
        "version": "0.5.4"
    },
    "tauri": {
        "allowlist": {
            "path": {
                "all": true
            },
            "window": {
                "create": true
            },
            "all": false,
            "dialog": {
                "all": true
            },
            "fs": {
                "all": true,
                "copyFile": true,
                "createDir": true,
                "exists": true,
                "readDir": true,
                "readFile": true,
                "removeDir": true,
                "removeFile": false,
                "renameFile": false,
                "scope": [
                    "$APPDATA/*",
                    "$HOME/Library/Messages/Attachments/**",
                    "$HOME/Library/Application Support/AddressBook/**"
                ],
                "writeFile": true
            },
            "shell": {
                "all": true
            },
            "os": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tooxt.tooxt",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Tooxt Uploader",
                "width": 800,
                "titleBarStyle": "Transparent",
                "minHeight": 400,
                "minWidth": 500
            }
        ]
    }
}
